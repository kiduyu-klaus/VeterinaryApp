<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.rey.material.widget.LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_cow"
            android:id="@+id/vet_updates_image"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vet_updates_title"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_marginTop="5dp"
            android:hint="Update Title"
            android:padding="4dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vet_updates_content"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_marginTop="5dp"
            android:hint="Update Content"
            android:padding="4dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:id="@+id/vet_updates_post"
            android:textAppearance="?android:textAppearanceLarge"
            android:text="Post Update"
            android:background="@color/colorPrimaryDark"
            android:layout_marginBottom="4dp"/>


    </com.rey.material.widget.LinearLayout>

</androidx.cardview.widget.CardView>