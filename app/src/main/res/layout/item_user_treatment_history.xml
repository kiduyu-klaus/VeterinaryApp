<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/animal_history_image"
                android:layout_width="100dp"
                android:padding="3dp"
                android:layout_height="100dp"
                android:src="@drawable/miuy"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:padding="3dp"
                android:textSize="12sp"
                android:text="Vet Office Location:"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/vet_location"
                android:textAlignment="center"
                android:padding="3dp"
                android:textSize="12sp"
                android:text="Nyeri"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/user_history_animal_name"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="Animal Name"
                    android:layout_marginTop="5dp"
                    android:textAlignment="textStart"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:id="@+id/history_status"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/tick"/>
                <TextView
                    android:id="@+id/status_type"
                    android:layout_width="50dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content"
                    android:text="Cured"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:textAlignment="textStart"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Treated By"
                    android:textAlignment="textStart"
                    android:textSize="15sp"
                    android:layout_marginEnd="5dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="90dp"
                    android:id="@+id/vet_name"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Dr Manunja"
                    android:textAlignment="textStart"
                    android:textSize="15sp"
                    android:layout_marginStart="5dp"
                    android:textStyle="bold"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Date Treated"
                    android:textAlignment="textStart"
                    android:textSize="15sp"
                    android:layout_marginEnd="5dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="90dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="12/02/2019"
                    android:textAlignment="textStart"
                    android:textSize="15sp"
                    android:layout_marginStart="5dp"
                    android:id="@+id/date_treated"
                    android:textStyle="bold"
                    />



            </LinearLayout>

            <TextView
                android:id="@+id/animal_history_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Illness Description"
                android:layout_margin="5dp"
                android:textAlignment="textStart"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/vet_remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="vet remarks"
                android:layout_marginTop="5dp"
                android:layout_margin="5dp"
                android:textAlignment="textStart"
                android:textSize="16sp"
                />


        </LinearLayout>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>