<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#024027"
    android:layout_height="match_parent"
    tools:context=".ChoseActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/logoo"
        android:scaleType="fitCenter"
        android:tint="#fff"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/app_slogan"
        android:layout_below="@+id/logo"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="@string/splash_text"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="35sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/choose_app_sloga"
        android:layout_below="@+id/app_slogan"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="@string/splash_text_choose_login"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="25sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choose_app_sloga"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_margin="8dp">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="105dp"
            android:id="@+id/cv_farmer"
            android:layout_margin="4dp"
            android:layout_weight="1"
            app:cardCornerRadius="6dp">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/cv_farmer_bg_image"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Farmer"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginEnd="5dp"
                android:textAlignment="center"
                android:textSize="35sp"
                tools:ignore="RtlCompat" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="@android:color/black"
                android:layout_marginEnd="5dp"
                android:id="@+id/cv_farmer_pass"
                android:textAlignment="center"
                android:textSize="17sp"
                tools:ignore="RtlCompat" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="105dp"
            android:id="@+id/cv_vet"
            android:layout_weight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="6dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cv_vet_bg_image"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Veterinary"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginEnd="5dp"
                android:textAlignment="center"
                android:textSize="35sp"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/cv_vet_pass"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="@android:color/black"
                android:layout_marginEnd="5dp"
                android:textAlignment="center"
                android:textSize="17sp"
                tools:ignore="RtlCompat" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="By clicking , You accept the terms And conditions of this system"
        android:textSize="14sp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:layout_marginBottom="45dp"/>

</RelativeLayout>